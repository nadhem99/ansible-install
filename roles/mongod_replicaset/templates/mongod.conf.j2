# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# Where and how to store data.
storage:
  dbPath: {{ mongodb_datadir_prefix }}db
  journal:
    enabled: {% if 'mongod_arbiters' in group_names %}false{% else %}true{% endif %} 
{% if 'mongod_arbiters' in group_names %}
  mmapv1:
    smallFiles: true
{% endif %}
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: /var/run/mongo/mongod.pid  # location of pidfile

# network interfaces
net:
  port: {{ mongod_port }}
  # bindIp: 127.0.0.1  # Listen to local interface only, comment to listen on all interfaces.

security:
  keyFile: {{ mongodb_datadir_prefix }}secret

#operationProfiling:

replication:
  replSetName: {{ replica_set_name }}

#sharding:

